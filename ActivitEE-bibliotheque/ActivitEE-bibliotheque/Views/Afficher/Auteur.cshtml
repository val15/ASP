@using ActivitEE_bibliotheque.Models
@{
    ViewBag.Title = "ListeLivresDeLAuteur";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ListeClients</title>
</head>
<body>
    <h2>Liste des livres de l'auteur : @ViewData["Nom auteur"]</h2>
    <table>
        <tr>
            <th>Titre</th>
            <th>Auteur</th>
        </tr>
        @foreach (ActivitEE_bibliotheque.Models.Livre livre in (List<Livre>)ViewData["Livres"])
        {
            <tr>
                <td>@livre.Titre</td>
                <td>@livre.Auteur.Nom</td>
            </tr>
        }
    </table>
</body>
</html>


